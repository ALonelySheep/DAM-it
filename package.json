{
  "name": "dam-it",
  "version": "1.0.0",
  "description": "A simple personal Digital Asset Management(DAM) tool.",
  "main": "server.js",
  "nodemonConfig": {
    "ignore": [
      "./view",
      "README.md"
    ]
  },
  "scripts": {
